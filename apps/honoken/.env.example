# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://...
DEV_DATABASE_URL=postgresql://...

# Storage (Upstash Redis)
UPSTASH_REDIS_REST_URL=https://...upstash.io
UPSTASH_REDIS_REST_TOKEN=AX...

# Security (Required)
# Encryption keys - versioned for rotation support
HONOKEN_ENCRYPTION_KEY_V1=base64_encoded_32_byte_key  # Generate with: openssl rand -base64 32
HONOKEN_ENCRYPTION_KEY_CURRENT=v1  # Current key version
# Future rotation: Add HONOKEN_ENCRYPTION_KEY_V2 and update CURRENT to v2

# Admin authentication
HONOKEN_ADMIN_USERNAME=your_admin_username  # Required for admin endpoints
HONOKEN_ADMIN_PASSWORD=your_strong_password  # Required for admin endpoints

# Application
SERVICE_NAME=honoken
ENVIRONMENT=development
HONOKEN_RELEASE_VERSION=1.0.0

# PostHog Analytics (Required)
POSTHOG_PROJECT_API_KEY=phc_your_project_key_here

# PostHog Configuration (Optional - defaults are optimized for Fluid Compute)
# POSTHOG_HOST=https://us.i.posthog.com
# POSTHOG_BATCH_SIZE=100
# POSTHOG_FLUSH_INTERVAL=30000

# Logging (Optional)
# VERBOSE_LOGGING=true
# LOG_SAMPLE_SUCCESS_RATE=0.01
# GIT_SHA=auto_detected

# Deprecated - Remove after migration
# HONOKEN_SENTRY_DSN=deprecated