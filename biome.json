{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!context", "!context/**"]
  },
  "extends": ["ultracite"],
  "linter": {
    "rules": {
      "performance": {
        "noNamespaceImport": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "packages/**/runtime/**/*.ts",
        "packages/**/runtime/**/*.tsx",
        "packages/**/inngest/**/*.ts",
        "packages/facts/**/*.ts",
        "packages/rules/**/*.ts"
      ],
      "linter": {
        "rules": {
          "performance": {
            "noNamespaceImport": "off"
          }
        }
      }
    },
    {
      "includes": ["apps/honoken/src/**/*.ts"],
      "linter": {
        "rules": {}
      }
    },
    {
      "includes": ["packages/cli-utils/src/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
      ],
      "linter": {
        "rules": {
          "performance": {
            "useTopLevelRegex": "off",
          },
          "suspicious": {
            "noExplicitAny": "off",
          }
        }
      }
    }
  ]
}
