{
  "name": "dayof",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "oxlint",
    "dev": "turbo dev --filter=!crew --filter=!handbook",
    "dev:events": "turbo -F events dev",
    "build": "turbo build --filter=!handbook --filter=!crew",
    "check-types": "turbo check-types",
    "dev:backstage": "turbo -F backstage dev",
    "dev:frontrow": "turbo -F frontrow dev",
    "dev:handbook": "turbo -F handbook dev",
    "dev:crew": "turbo -F crew dev",
    "dev:honoken": "turbo -F honoken dev",
    "db:push": "turbo -F server db:push",
    "db:studio": "turbo -F server db:studio",
    "db:generate": "turbo -F server db:generate",
    "db:migrate": "turbo -F server db:migrate",
    "dev:inngest:events": "inngest-cli dev -u http://localhost:3001/api/inngest"
  },
  "dependencies": {
    "@effect/schema": "^0.75.5",
    "@handfish/drizzle-effect": "^0.0.17",
    "@neondatabase/serverless": "^1.0.1",
    "dinero.js": "^2.0.0-alpha.14",
    "drizzle-kit": "beta",
    "drizzle-orm": "beta",
    "drizzle-zod": "^0.8.3",
    "effect": "^3.17.9",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "turbo": "^2.5.6",
    "@biomejs/biome": "2.1.2",
    "ultracite": "5.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "oxlint": "^1.13.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite format"
    ]
  },
  "packageManager": "bun@1.2.15"
}
