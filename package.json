{
  "name": "dayof",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "oxlint",
    "dev": "turbo dev --filter=!crew --filter=!handbook",
    "dev:events": "turbo -F events dev",
    "build": "turbo build --filter=!handbook --filter=!crew",
    "check-types": "turbo check-types",
    "dev:backstage": "turbo -F backstage dev",
    "dev:frontrow": "turbo -F frontrow dev",
    "dev:handbook": "turbo -F handbook dev",
    "dev:crew": "turbo -F crew dev",
    "dev:honoken": "turbo -F honoken dev",
    "db:push": "turbo db:push --filter=database",
    "db:studio": "turbo db:studio --filter=database",
    "db:generate": "turbo db:generate --filter=database",
    "db:migrate": "turbo db:migrate --filter=database",
    "dev:inngest:events": "npx inngest-cli@latest dev -u http://localhost:3001/api/inngest",
    "onboard": "bun scripts/onboard.ts",
    "vc:set-scope": "bun scripts/vercel-set-scope.ts",
    "env:pull:dev": "bun scripts/vercel-env-pull.ts development",
    "env:pull:preview": "bun scripts/vercel-env-pull.ts preview",
    "env:pull:prod": "bun scripts/vercel-env-pull.ts production",
    "secrets:neon": "bun scripts/neon-setup-local.ts",
    "vc:env:add": "bun scripts/vc-env-add.ts",
    "db:branch:new": "bun scripts/neon-branch.ts create",
    "db:branch:delete": "bun scripts/neon-branch.ts delete"
  },
  "dependencies": {
    "@effect/schema": "^0.75.5",
    "@handfish/drizzle-effect": "^0.0.17",
    "@neondatabase/serverless": "^1.0.1",
    "dinero.js": "^2.0.0-alpha.14",
    "drizzle-kit": "beta",
    "drizzle-orm": "beta",
    "drizzle-zod": "^0.8.3",
    "effect": "^3.17.9",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "turbo": "^2.5.6",
    "@biomejs/biome": "2.1.2",
    "ultracite": "5.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "oxlint": "^1.13.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite format"
    ]
  },
  "packageManager": "bun@1.2.15"
}
